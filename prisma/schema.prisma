// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model DocumentType {
  id             Int    @id @default(autoincrement())
  name           String
  title          String
  validityPeriod Int

  texts    DocumentTypeText[] // Relacionamento com a nova tabela
  document Document[]
}

model DocumentTypeText {
  id             Int          @id @default(autoincrement())
  documentTypeId Int
  name           String
  text           String
  documentType   DocumentType @relation(fields: [documentTypeId], references: [id])
  Document       Document[]
}

model Document {
  id                 Int      @id @default(autoincrement())
  documentTypeId     Int
  documentTypeTextId Int
  number             String
  text               String
  date               DateTime @default(now())

  documentType DocumentType     @relation(fields: [documentTypeId], references: [id])
  texts        DocumentTypeText @relation(fields: [documentTypeTextId], references: [id])

  @@unique([number, documentTypeId])
}
